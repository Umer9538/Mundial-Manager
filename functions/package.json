{
  "name": "mundial-manager-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Mundial Manager crowd management app",
  "scripts": {
    "build": "echo 'No build step required for JavaScript functions'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0"
  },
  "private": true
}
