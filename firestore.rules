rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Helper function to check if user has specific role
    function hasRole(role) {
      return isAuthenticated() && getUserRole() == role;
    }

    // Helper function to check if user has any of the specified roles
    function hasAnyRole(roles) {
      return isAuthenticated() && getUserRole() in roles;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Users can update their own profile (except role)
      allow update: if isOwner(userId) &&
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));

      // Only authenticated users can create their profile during registration
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Organizers can read all users
      allow read: if hasRole('organizer');

      // Organizers can update user roles
      allow update: if hasRole('organizer');
    }

    // Events collection
    match /events/{eventId} {
      // All authenticated users can read events
      allow read: if isAuthenticated();

      // Only organizers can create/update/delete events
      allow create, update, delete: if hasRole('organizer');
    }

    // Venues collection
    match /venues/{venueId} {
      // All authenticated users can read venues
      allow read: if isAuthenticated();

      // Only organizers can create/update venues
      allow create, update: if hasRole('organizer');
    }

    // Zones collection
    match /zones/{zoneId} {
      // All authenticated users can read zones
      allow read: if isAuthenticated();

      // Only organizers can create/update zones
      allow create, update: if hasRole('organizer');
    }

    // Crowd density collection
    match /crowd_density/{densityId} {
      // All authenticated users can read crowd density
      allow read: if isAuthenticated();

      // Organizers and security can write crowd density
      allow create, update: if hasAnyRole(['organizer', 'security']);
    }

    // Incidents collection
    match /incidents/{incidentId} {
      // All staff roles can read incidents
      allow read: if hasAnyRole(['organizer', 'security', 'emergency']);

      // Fans can read incidents they reported
      allow read: if isAuthenticated() &&
        resource.data.reportedBy == request.auth.uid;

      // All authenticated users can create incidents (report)
      allow create: if isAuthenticated();

      // Security and emergency can update incidents
      allow update: if hasAnyRole(['organizer', 'security', 'emergency']);

      // Only organizers can delete incidents
      allow delete: if hasRole('organizer');
    }

    // Alerts collection
    match /alerts/{alertId} {
      // Users can read alerts targeted to their role
      allow read: if isAuthenticated();

      // Only organizers can create alerts
      allow create: if hasRole('organizer');

      // Organizers can update/delete alerts
      allow update, delete: if hasRole('organizer');
    }

    // Notifications collection (in-app notifications)
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // System can create notifications (via Cloud Functions)
      allow create: if isAuthenticated();

      // Users can delete their own notifications
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }
  }
}
